<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Account">
    <include
        android:id="@+id/create_account"
        layout="@layout/toolbar" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentLeft="true">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="490dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">
                <TextView
                    android:id="@+id/create"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create an Account"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                <TextView
                    android:id="@+id/Etext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/create"
                    android:layout_marginTop="10dp"
                    android:text="Email Address"
                    android:textColor="@color/blue" />
                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Etext"
                    android:layout_marginBottom="15dp" />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignStart="@+id/create"
                    android:layout_below="@+id/email"
                    android:layout_marginTop="-15dp"
                    android:text="Name"
                    android:textColor="@color/blue"
                    android:layout_alignLeft="@+id/create" />
                <TextView
                    android:id="@+id/surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/pssword"
                    android:layout_below="@+id/email"
                    android:layout_marginTop="-15dp"
                    android:text="Surname"
                    android:textColor="@color/blue"
                    android:layout_alignLeft="@+id/pssword" />
                <EditText
                    android:id="@+id/namespace"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/surname"
                    android:layout_alignParentLeft="true" />
                <EditText
                    android:id="@+id/surnamespace"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/surname"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/namespace" />
                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/create"
                    android:layout_marginTop="209dp"
                    android:text="Gender"
                    android:textColor="@color/blue"
                    android:layout_alignLeft="@+id/create" />
                <Spinner
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:id="@+id/gender_spinner"
                    android:layout_alignBottom="@+id/gender"
                    android:layout_alignEnd="@+id/create"
                    android:layout_alignRight="@+id/create" />


                <TextView
                    android:id="@+id/dateofbirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/create"
                    android:layout_marginBottom="205dp"
                    android:text="Date of Birth"
                    android:textColor="@color/blue"
                    android:layout_alignLeft="@+id/create" />
               <Spinner
                   android:layout_width="100dp"
                   android:layout_height="20dp"
                   android:id="@+id/date_of_birth_spinner"
                   android:layout_alignEnd="@+id/create"
                   android:layout_alignTop="@+id/dateofbirth"
                   android:layout_alignRight="@+id/create"></Spinner>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/pssword"
                    android:layout_alignStart="@+id/create"
                    android:text="password"
                    android:textColor="@color/blue"
                    android:layout_alignLeft="@+id/create" />

                <EditText
                    android:id="@+id/pssword"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/create"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="137dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:layout_alignRight="@+id/create" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/compampassword"
                    android:layout_alignStart="@+id/create"
                    android:text="Confirm password"
                    android:textColor="@color/blue"
                    android:layout_alignLeft="@+id/create" />

                <EditText
                    android:id="@+id/compampassword"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="93dp"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:layout_alignParentRight="true" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/blue"
                    android:text="Create Account" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


</RelativeLayout>